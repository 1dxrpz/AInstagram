{% block post %}
<div class="card" style="width: 18rem;">
	<img src="{{imageURL}}" class="card-img-top" alt="...">
	<div class="card-body">
		<h5 class="card-title">{{title}}</h5>
		<p class="card-text">{{prompt}}</p>
		<p class="card-text">{{description}}</p>
	</div>
	<div class="card-body">
		<div class="d-flex" style="justify-content: space-between;">
			<div class="text-info">{{likes}}</div>
			<div class="text-danger">{{dislikes}}</div>
			<div>{{likes - dislikes}}</div>
			<div class="buttons">
				{% if app.user %}
					<button type="button" class="btn btn-success btn-sm" aria-label="Close">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
			  				<path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
						</svg>
					</button>
					<button type="button" class="btn btn-danger btn-sm" aria-label="Close">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
							<path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
						</svg>
					</button>
				{% endif %}
				{% if not app.user %}
					<a type="button" class="btn btn-success btn-sm" aria-label="Close" href="/account">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
			  				<path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
						</svg>
					</a>
					<button type="button" class="btn btn-danger btn-sm" aria-label="Close">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
							<path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
						</svg>
					</button>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}
