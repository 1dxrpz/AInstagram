{% extends 'base.html.twig' %}
{% block title %}AInstagram - home{% endblock %}

{% block body %}

<div id="homecarousel" class="carousel slide" data-ride="carousel">
	<div class="carousel-inner">
	  <div class="carousel-indicators">
    		<button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true"></button>
    		<button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
  		</div>
		<div class="carousel-item active first_slide">
			<div class="image" style="background-image: url({{asset('static/images/3.jpg')}});"></div>
			<div class="dot"></div>
			<div class="carousel-caption d-none d-md-block">
				<h5>Second slide label</h5>
				<p>Some representative placeholder content for the second slide.</p>
			</div>
		</div>
		<div class="carousel-item">
			<div class="image" style="background-image: url({{asset('static/images/2.jpg')}});"></div>
			<div class="dot"></div>
			<div class="carousel-caption d-none d-md-block">
				<h5>Second slide label</h5>
				<p>Some representative placeholder content for the second slide.</p>
			</div>
		</div>
		<div class="carousel-item">
			<div class="image" style="background-image: url({{asset('static/images/1.jpg')}});"></div>
			<div class="dot"></div>
			<div class="carousel-caption d-none d-md-block">
				<h5>Second slide label</h5>
				<p>Some representative placeholder content for the second slide.</p>
			</div>
		</div>
	</div>
	<a class="carousel-control-prev" href="#homecarousel" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#homecarousel" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<br />
<div class="container-sm d-flex flex-wrap justify-content-center">
	<br />
	<h3>Random posts</h3>
</div>
<div class="container-sm d-flex flex-wrap justify-content-center">
	<div class="content_wrapper d-flex flex-wrap justify-content-start">
		<!-- CONTENT WRAPPER -->
		<div class="card" style="width: 18rem; order: 1;">
			<div class="card-body">
				<h5 class="card-title">Wanna get more?</h5>
				<p class="card-text">Eplore other images genereted by another users</p>
				<a href="{{ path('explore') }}" class="btn btn-primary">Explore</a>
			</div>
		</div>
	</div>
</div>
<br />
<div class="container-sm d-flex flex-wrap justify-content-center">
	<br />
	<h3>Uploading</h3>
</div>
<br />
<div class="container-sm d-flex flex-wrap justify-content-center">
	<br />
	<h3>Join Us</h3>
</div>
<div class="container-sm d-flex flex-wrap justify-content-center">
	<button type="button" class="btn btn-primary btn-lg">
		<a href="{{path('register')}}" class="text-reset link-underline link-underline-opacity-0">Register</a>
	</button>
</div>
<br />
{% endblock %}
{% block scripts %}
<script type="text/javascript">
	for (var i = 0; i < 8; i++)
	$.ajax({
		url: `/partials/post/${i * 20 + 200}/${i * 10 + 100}`,
		method: 'get',
		dataType: 'html',
		success: (data) => {
			var content_wrapper = document.querySelector(".content_wrapper");
			content_wrapper.innerHTML += data;
		}
	})
</script>
{% endblock %}